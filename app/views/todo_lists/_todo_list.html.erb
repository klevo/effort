<article id="<%= dom_id todo_list %>" class="todo_list">
  <h3 class="name"><%= todo_list.name %></h3>

  <ul class="items" data-behavior="sortable"
      data-position-url="<%= position_project_todo_list_todo_items_path(todo_list.project, todo_list) %>">
    <% todo_list.todo_items.pending.positioned.each do |todo_item| %>
      <%= render todo_item %>
    <% end %>
  </ul>

  <%= render 'todo_items/form', todo_list: todo_list %>

  <ul class="completed_items">
    <% todo_list.todo_items.completed.positioned.each do |todo_item| %>
      <%= render todo_item %>
    <% end %>
  </ul>
</article>
