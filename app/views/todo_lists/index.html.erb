<section class="project">
  <h1><%= @project.name %></h1>
  <ul class="project_nav">
    <li><%= link_to 'Todos', [@project, :todo_lists] %></li>
    <li><%= link_to 'Writings', '#todo' %></li>
    <li><%= link_to 'Files', '#files' %></li>
  </ul>

  <h2>Todo Lists</h2>

  <%= link_to 'Add Todo List', [:new, @project, :todo_list], remote: true, format: :js %>

  <%= render 'form' %>

  <section class="todo_lists">
    <% if @project.todo_lists.any? %>
      <%= render @project.todo_lists %>
    <% else %>
      <p class="empty">
        No Todo Lists created yet.
      </p>
    <% end %>
  </section>
</section>
