<%= form_for [@project, @writing], remote: true, format: :js do |f| %>
  <div class="field">
    <%= f.text_field :title, autofocus: @writing.new_record?, placeholder: 'Title' %>
  </div>
  <div class="field">
    <%= f.text_area :content, data: { behavior: 'autosize' } %>
  </div>
  <div class="actions">
    <%= f.submit 'Save this writing', data: { disable_with: 'Saving...' } %>
  </div>
<% end %>
